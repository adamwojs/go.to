{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Wejściowy URL</div>
        <div class="panel-body">
            <div class="input-group input-group-lg">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-link"></i>
                </span>

                {{ form_widget(form.url, { attr: { 
                    'class': 'form-control', 
                    'placeholder': 'Adres URL...'
                }}) }}

                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">
                        <i class="glyphicon glyphicon-scissors"></i>
                        &nbsp;
                        SKRÓĆ
                    </button>
                </span>        
            </div>  
        </div>
    </div>
    {{ form_end(form) }}
    
    {% if url is defined %}
    <div class="panel panel-default">
        <div class="panel-heading">Wyściowy URL</div>
        <div class="panel-body">
            <label for="output">Kliknij aby zaznaczyć tekst.</label>
            <div class="input-group input-group-lg">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-link"></i>
                </span>
                
                <input id="output" type="url" class="form-control" value="{{ url }}" readonly
                       onClick="this.setSelectionRange(0, this.value.length)" />
            </div>
        </div>        
    </div>
    {% endif %}
{% endblock %}
